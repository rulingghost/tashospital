{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "api/index.py"
    },
    {
      "source": "/assets/(.*)",
      "destination": "frontend/dist/assets/$1"
    },
    {
      "source": "/img/(.*)",
      "destination": "frontend/dist/img/$1"
    },
    {
      "source": "/locales/(.*)",
      "destination": "frontend/dist/locales/$1"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/dist/index.html"
    }
  ]
}
